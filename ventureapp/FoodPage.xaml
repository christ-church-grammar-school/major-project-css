<Page x:Class="ventureapp.FoodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ventureapp"
      mc:Ignorable="d" 
      d:DesignHeight="507" d:DesignWidth="800"
      Title="FoodPage">

    <Grid Width="800" Height="507">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="77"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="380*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFE01" Offset="0.0" />
                <GradientStop Color="#C001FD" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Cooking Guidelines" VerticalAlignment="Center" FontFamily="Consolas" FontSize="48" FontWeight="Bold" Foreground="White" Height="133" Width="487" Margin="53,23,133,351" Grid.ColumnSpan="2" Grid.Column="3"/>
        <TextBlock Grid.ColumnSpan="2" Grid.Column="3" HorizontalAlignment="Left" Height="294" Margin="0,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="554" Foreground="White" FontSize="14"><Run FontWeight="Bold" FontSize="20" Text="TRANGIA SAFETY:"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="- Designate a flat area for the use of the trangia (keep this away from flammable objects like tents)"/><LineBreak/><Run Text="- DO NOT keep the fuel near the trangia while it is lit"/><LineBreak/><Run Text="- Form a group cooking circle with your trangia stoves"/><LineBreak/><Run Text="- NEVER step over a trangia"/><LineBreak/><Run Text="- Do not store fuel in the canister after cooking"/><LineBreak/><Run/><LineBreak/><Run FontWeight="Bold" FontSize="20" Text="GENERAL SAFETY:"/><LineBreak/><Run FontWeight="Bold"/><LineBreak/><Run Text="- Wash your hands before preparing any meal"/><LineBreak/><Run Text="- Collect all the food to a central location before you start to prepare it"/><LineBreak/><Run Text="- Take ALL food scraps with you"/><LineBreak/><Run Text="- Wash up away from any creeks or rivers, and NEVER wash up using a creek or river"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="Home_Button" HorizontalAlignment="Stretch" Margin="0,23,7,414" Grid.Row="0" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="Home_Button_Clicked" BorderThickness="8" Grid.Column="1">
            <StackPanel>
                <Image Source="images/House.png" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
