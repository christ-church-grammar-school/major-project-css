<Page x:Class="ventureapp.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ventureapp"
      mc:Ignorable="d" 
      d:DesignHeight="507" d:DesignWidth="800"
      Title="MainPage" Width="800" Height="507" WindowHeight="577" WindowWidth="820">

    <Grid Width="800" Height="507">
        <Grid.RowDefinitions>
            <RowDefinition Height="110*"/>
            <RowDefinition Height="194*"/>
            <RowDefinition Height="203*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="77*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#ffdb55" Offset="0.4"/>
                <GradientStop Color="#29cb75" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="VENTURE APP" VerticalAlignment="Center" FontFamily="Consolas" FontSize="48" FontWeight="Bold" Foreground="White" Height="60" Width="301" Margin="101.5,25,82.5,25"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Stretch" Height="174" Stroke="Black" VerticalAlignment="Stretch" Width="442" Grid.Column="1" Grid.Row="1" RadiusY="12" RadiusX="12" StrokeThickness="10" Margin="10"/>
        <TextBlock x:Name="timer" Grid.Column="1" HorizontalAlignment="Center" Margin="50.5,34,35.5,22" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" FontFamily="Consolas" FontSize="78" FontWeight="Bold" Height="138" Width="399" Grid.IsSharedSizeScope="True" Text="{Binding Path=MyValue}"/>
        <Button x:Name="Map_Button" HorizontalAlignment="Stretch" Margin="0" Grid.Row="1" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="Map_Button_Clicked" BorderThickness="8">
            <StackPanel>
                <Image Source="images/mapicon.png" Height="42" Width="42" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="FirstAid_Button" HorizontalAlignment="Stretch" Margin="118,10,454.5,123" Grid.Row="2" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="FirstAid_Button_Clicked" BorderThickness="8" Grid.ColumnSpan="2">
            <StackPanel>
                <Image Source="images/firstaid.png" Height="41" Width="51" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Food_Button" HorizontalAlignment="Stretch" Margin="206.5,48,208.5,85" Grid.Row="2" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="Food_Button_Clicked" BorderThickness="8" Grid.Column="1">
            <StackPanel>
                <Image Source="images/food.png" Height="43" Width="42" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Calc_Button" HorizontalAlignment="Stretch" Margin="450.5,10,122,123" Grid.Row="2" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="Calc_Button_Clicked" BorderThickness="8" Grid.ColumnSpan="2" Grid.Column="1">
            <StackPanel>
                <Image Source="images/calc.png" Height="40" Width="41" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="Quiz_Button" HorizontalAlignment="Stretch" Margin="38.5,62,49,62" Grid.Row="1" VerticalAlignment="Stretch" Width="70" FontSize="16" Height="70" BorderBrush="Black" Foreground="White" Background="White" Click="Quiz_Button_Clicked" BorderThickness="8" Grid.Column="2">
            <StackPanel>
                <Image Source="images/quiz.png" Height="42" Width="43" />
            </StackPanel>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
